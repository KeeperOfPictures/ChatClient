<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient"
        mc:Ignorable="d"
        Title="Чат" Height="500" Width="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Панель подключения -->
        <StackPanel Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" Orientation="Horizontal" Margin="5">
            <TextBox x:Name="UsernameTextBox" Width="120" Margin="0,0,5,0" 
                     Text="Гость"/>
            <TextBox x:Name="ServerIpTextBox" Width="100" Margin="0,0,5,0" 
                     Text="127.0.0.1"/>
            <TextBox x:Name="ServerPortTextBox" Width="50" Margin="0,0,5,0"
                     Text="8888"/>
            <Button x:Name="ConnectButton" Content="Подключиться" 
                    Click="ConnectButton_Click" Width="100"/>
            <Button x:Name="DisconnectButton" Content="Отключиться" 
                    Click="DisconnectButton_Click" Width="100" Margin="5,0,0,0"
                    IsEnabled="False"/>
        </StackPanel>

        <!-- Список пользователей (левая колонка) -->
        <GroupBox Grid.Column="0" Grid.Row="1" Header="Участники" Margin="5">
            <ListBox x:Name="UsersListBox"/>
        </GroupBox>

        <!-- История сообщений (правая колонка) -->
        <GroupBox Grid.Column="1" Grid.Row="1" Header="Чат" Margin="5">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="ChatTextBlock" TextWrapping="Wrap" Margin="5"/>
            </ScrollViewer>
        </GroupBox>

        <!-- Панель отправки сообщений -->
        <StackPanel Grid.Column="1" Grid.Row="2" Orientation="Horizontal" Margin="5">
            <TextBox x:Name="MessageTextBox" Width="600" Margin="0,0,5,0"
                     KeyDown="MessageTextBox_KeyDown"/>
            <Button x:Name="SendButton" Content="Отправить" 
                    Click="SendButton_Click" Width="100" IsEnabled="False"/>
        </StackPanel>
    </Grid>
</Window>